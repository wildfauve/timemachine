<% model_class = Expense %>
<% title model_class.to_s %>

<%= render partial: 'shared/employee_hrd' %>

<%= link_to 'New Item', new_employee_expense_path, :class => "small button"%>

<table>
  <thead>
    <tr>
      <th>Claim</th>
      <th>Date Entered</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Type</th>      
      <th>Customer</th>      
      <th>Action</th>      
    </tr>
  </thead>
  <tbody>
   <% for claim in @employee.claims %>
      <% for ex in claim.expenses %>
         <%= render partial: 'expense_row', locals: {ex: ex, claim: claim} %>
      <% end %>
   <% end %>
   </tbody>
</table>