<div class="row">
	<div class="small-2 columns">
		<h2 class="subheader"><%= @employee.name %></h2>
	</div>
	<div class="small-10 columns">	
		<dl class="sub-nav">
		  <dd class="active"><%= link_to 'Show', employee_path(@employee) %></dd>
		  <dd><%= link_to 'Dashboard-All', by_employee_path(@employee) %></dd>
		  <dd><%= link_to 'Dashboard_Period', by_employee_path(@employee, :state => :period) %></dd>
		  <dd><a href="#">Suspended</a></dd>
		</dl>
	</div>
</div>
<% for p in @employee.projects %>
		<div class=<%=p.name%>>
			<h3 class="subheader"><%= link_to "#{p.customer.name}:#{p.name}", new_employee_assignment_path(@employee, :project_id => p.id), :remote => true %></h3>
			<div id='<%=p.hyphenise_name%>' class='time-form'>
			</div>			
		</div>
<% end %>

