<%= form_tag(projsummary_employee_path(@employee, project: @project), method: :put, :class => "custom", remote: true) do %>
	<div class="row">
		<div class="small-3 columns">
		    <%= label_tag 'Viewable?', nil , class: "right inline" %>
		  </div>
		<div class="small-9 columns">
			<%= radio_button_tag('viewable', "yes", @projsummary.try(:viewable)) %>
		</div>
	</div>
	<div class="row">
		<div class="small-3 columns">
		   <%= label_tag 'Hide?', nil , class: "right inline" %>
		</div>
		<div class="small-9 columns">
			<%= radio_button_tag('viewable', "no", !@projsummary.try(:viewable)) %>
		</div>
	</div>
	<div class="row">
		<div class="small-3 columns">
		    <%= label_tag 'Rate', nil , class: "right inline" %>
		  </div>
		<div class="small-9 columns">
         <%= number_field_tag 'rate', @projsummary.try(:rate), min: 1, max: 200, step: 0.5 %>
		</div>
	</div>
	<div class="row">
		<div class="small-3 columns">
		    <%= label_tag 'Hours Budget', nil , class: "right inline" %>
		  </div>
		<div class="small-9 columns">
         <%= number_field_tag 'hours_budget', @projsummary.try(:hours_budget) %>
		</div>
	</div>   
	<div class="row">
	  <div class="small-9 small-offset-3 columns">
	    <%= submit_tag 'Submit', :class => 'button small' %>
	  </div>
	</div>
<% end %>
