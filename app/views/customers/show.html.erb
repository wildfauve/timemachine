<h2 class="subheader"></h2>
<div class="row">
	<div class="small-3 columns">
		<%= link_to '<', invoice_customer_path(@customer, state: :invoice, date_start: @dash.day_range.first - 1.month), :class => 'button small' %>	
		<%= link_to '>', invoice_customer_path(@customer, state: :invoice, date_start: @dash.day_range.first + 1.month), :class => 'button small' %>
		<%= link_to 'Export', export_customer_path(@customer, params.merge(format: :csv, date_start: @dash.day_range.first)), :class => 'button small' %>    
	</div>
	<div class="small-9 columns">		
  </div>
</div>
<table>
   <thead>
      <tr>
         <th>Assignment</th>
         <% for day in @dash.day_range %>
            <th>
               <p><%= day.strftime('%d %b') %></p>
               <p><%= day.strftime('%a')%></p>
            </th>
         <% end %>
         <th><h3 class="subheader">Total</h3></th>
      </tr>
   </thead>
   <tbody>
      <% sum_proj = @dash.calc_summary.summ_by_project %>
      <% for proj in sum_proj %>
        <tr>
          <td>
             <h4 class="subheader"><%= proj[:project].customer.name %></h4>
             <h6 class="subheader"><%= proj[:project].name %></h6>
          </td>      
          <% for day in @dash.day_range %>
            <td>
              <div class="time-entry" data-date="<%= day %>" data-proj="<%= proj[:project].name %>" >
                <%= @dash.hours_for_day(day, proj).to_s %>
              </div>
            </td>
          <% end %>
          <td class="subheader"><%= @dash.proj_total[proj[:project].id] %></td>
        </tr>          
      <% end %>
      <tr>
         <td><h2 class="subheader">Totals</h2></td>
         <% @dash.day_total.each do |day, tot| %>
            <td><h3 class="subheader"><%= tot %></h3></td>
         <% end %>
         <td><h3 class="subheader"><%= @dash.overall_total %></h3></td>         
      </tr>
   </tbody>
</table>